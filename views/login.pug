extends ../layout/beatiful.pug
block content
     h1 Login
     
     if errors 
       each error in errors
        .alert.alert-danger= error
     form(action="/users/login", method ="POST")
      .form-group
       label Username
       input#name.form-control(name ="Uname", type="text", value= values ? values.Uname : "")
       label Password
       input#name.form-control(name= "paassword", type="password", value= values ? values.paassword : "")
       button.btn.btn-primary.mt-3 login 